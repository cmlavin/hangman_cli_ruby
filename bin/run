#!/usr/bin/env ruby
require './config/environment.rb'
require_all 'app'

game = Game.new
while game.wants_to_play
  if game.user.name.nil?
    game.welcome
  end
  game.generate_word
  while game.game_status
    game.user_input
    game.check_letter
    # binding.pry
    game.hangman_drawing
  end
  if game.has_won
    puts "you won the thing"
    game.save
  elsif game.has_lost
    puts "you lost the thing"
    game.save
  else
    puts "you broke the thing"
  end
end
